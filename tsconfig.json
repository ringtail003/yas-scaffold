{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES6"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "noEmit": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "ES6",
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "testing/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "type": "module"
}
